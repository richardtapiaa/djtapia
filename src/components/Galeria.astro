    <div class="absolute top-1/4 right-20 w-2 h-2 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
    <div class="absolute bottom-1/3 left-16 w-1 h-1 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 right-1/4 w-2 h-2 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 1.5s;"></div>
    <div class="absolute bottom-1/4 left-1/3 w-3 h-3 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.8s;"></div>
    <div class="absolute top-1/3 left-1/4 w-1 h-1 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 1.2s;"></div>
    <div class="absolute bottom-40 right-1/3 w-2 h-2 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 0.3s;"></div>
    <div class="absolute top-3/4 left-20 w-2 h-2 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 1.8s;"></div>
    <div class="absolute top-16 right-1/2 w-1 h-1 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 0.6s;"></div>
    <div class="absolute bottom-1/2 left-1/2 w-2 h-2 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute top-2/3 right-16 w-3 h-3 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 1.4s;"></div>
    <div class="absolute top-10 left-1/3 w-2 h-2 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 0.2s;"></div>
    <div class="absolute bottom-10 right-1/2 w-1 h-1 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 2.2s;"></div>
    <div class="absolute top-1/2 left-12 w-3 h-3 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 0.9s;"></div>
    <div class="absolute bottom-1/3 right-24 w-2 h-2 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 1.6s;"></div>
    <div class="absolute top-40 right-10 w-1 h-1 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.4s;"></div>
    <div class="absolute bottom-2/3 left-24 w-2 h-2 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 1.9s;"></div>
    <div class="absolute top-1/4 left-1/2 w-3 h-3 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 1.1s;"></div>
    <div class="absolute bottom-16 right-1/4 w-1 h-1 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.7s;"></div>
    <div class="absolute top-3/4 right-1/3 w-2 h-2 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 2.1s;"></div>
    <div class="absolute bottom-1/4 left-20 w-3 h-3 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 1.3s;"></div>
    <div class="absolute top-1/3 right-1/2 w-2 h-2 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.1s;"></div>
    <div class="absolute bottom-3/4 left-1/4 w-1 h-1 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 1.7s;"></div>
    <div class="absolute top-2/3 left-16 w-2 h-2 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 2.3s;"></div>
    <div class="absolute bottom-40 right-20 w-3 h-3 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.95s;"></div>
    <div class="absolute top-1/2 right-12 w-1 h-1 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 1.45s;"></div>
    <div class="absolute bottom-1/2 left-8 w-2 h-2 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 2.4s;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
     
      <div class="text-center mb-16" data-aos="fade-down" data-aos-duration="1000">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Galería
        </h2>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          Momentos destacados de mis presentaciones
        </p>
        <div class="w-24 h-1 bg-orange-500 mx-auto mt-6"></div>
      </div>

      <GsapPin client:load />

    
      <div class="gallery-container space-y-[50vh]">
      
        <div 
          class="gallery-item group relative h-screen w-full flex flex-col items-center justify-center gap-8 opacity-0"
          data-image="/imagenes/imagen1.jpg" data-title="Set en Club Nocturno" data-description="Presentación en vivo"
        >
          <div class="text-center animate-bounce-slow">
            <h3 class="text-5xl md:text-6xl font-bold text-orange-500 mb-2">PRUEBA</h3>
          </div>
          <div class="max-w-4xl w-full rounded-2xl overflow-hidden border border-orange-500/20 hover:border-orange-500/60 transition-all duration-400 shadow-2xl hover:shadow-orange-500/30 cursor-pointer">
            <OptimizedImage src="/imagenes/imagen1.jpg" alt="Set en Club Nocturno" class="w-full h-[600px] object-cover transition-transform duration-400 group-hover:scale-110" />
          </div>
        </div>

        <!-- Imagen 2 -->
        <div
          class="gallery-item group relative h-screen w-full flex flex-col items-center justify-center gap-8 opacity-0"
          data-image="/imagenes/imagen2.jpg" data-title="Festival de Verano" data-description="Escenario principal"
        >
          <div class="text-center animate-bounce-slow">
            <h3 class="text-5xl md:text-6xl font-bold text-orange-500 mb-2">PRUEBA</h3>
          </div>
          <div class="max-w-4xl w-full rounded-2xl overflow-hidden border border-orange-500/20 hover:border-orange-500/60 transition-all duration-400 shadow-2xl hover:shadow-orange-500/30 cursor-pointer">
            <OptimizedImage src="/imagenes/imagen2.jpg" alt="Festival de Verano" class="w-full h-[600px] object-cover transition-transform duration-400 group-hover:scale-110" />
          </div>
        </div>

    <div
    class="gallery-item group relative h-screen w-full flex flex-col items-center justify-center gap-8 opacity-0"
    data-image="/imagenes/imagen3.jpg"
    data-title="Sesión en Estudio"
    data-description="Producción musical"
  >
    <div class="text-center animate-bounce-slow">
      <h3 class="text-5xl md:text-6xl font-bold text-orange-500 mb-2">PRUEBA</h3>
    </div>
    <div class="max-w-4xl w-full rounded-2xl overflow-hidden border border-orange-500/20 hover:border-orange-500/60 transition-all duration-400 shadow-2xl hover:shadow-orange-500/30 cursor-pointer">
      <OptimizedImage src="/imagenes/imagen3.jpg" alt="Sesión en Estudio" class="w-full h-[600px] object-cover transition-transform duration-400 group-hover:scale-110" />
    </div>
  </div>
      </div>
    </div>
  </div>

 
  <div class="absolute bottom-0 left-0 right-0 h-32 overflow-hidden">
    <svg class="w-full h-full" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <defs>
        <linearGradient id="waveGradient1" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#111827;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
        </linearGradient>
        <linearGradient id="waveGradient2" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#1f2937;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#111827;stop-opacity:1" />
        </linearGradient>
        <linearGradient id="waveGradient3" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#000000;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#111827;stop-opacity:1" />
        </linearGradient>
      </defs>
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V120H0Z" opacity=".25" fill="url(#waveGradient1)"></path>

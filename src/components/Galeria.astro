import Contacto from "./Contacto.astro";
import GaleriaScripts from "./cmp/GaleriaScripts.astro";
import OptimizedImage from "./cmp/OptimizedImage.astro";
---

<section id="galeria" class="relative bg-gradient-to-b from-gray-900 via-black to-gray-900 py-20 lg:py-32 overflow-hidden">

  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-20 left-10 w-2 h-2 bg-orange-500 rounded-full animate-pulse"></div>

      <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V120H0Z" fill="url(#waveGradient3)"></path>
    </svg>
  </div>

  <!-- Botón flotante de WhatsApp -->
  <a 
    href="wa.me/+50686227338" 
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-float hidden fixed bottom-8 right-8 bg-green-500 hover:bg-green-600 text-white rounded-full w-16 h-16 items-center justify-center shadow-2xl hover:shadow-green-500/50 transition-all duration-300 hover:scale-110 z-50 opacity-0"
    aria-label="Contactar por WhatsApp"
  >
    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">

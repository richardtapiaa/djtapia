---
import Equalizer3D from "./jsx/Ecualizador/Ecualizador";
import { ServiceFlipCard } from "./animate-ui/components/community/service-flip-card";
import Contacto from "./Contacto.astro";
import ServiciosScrips from "./cmp/ServiciosScrips.astro";

const servicesData = [
  {
    title: "Bodas & Eventos Corporativos",
    subtitle: "Música perfecta para tu día especial",
    color: "blue" as const,
    features: [
      { text: "DJ profesional con años de experiencia" },
      { text: "Equipo de sonido de alta calidad" },
      { text: "Playlist personalizada según tus gustos" },
      { text: "Iluminación profesional incluida" }
    ],
    iconSvgUrl: "/svgs/djsvg.svg",
    delay: 100
  },
  {
    title: "Fiestas Privadas",
    subtitle: "Convierte tu fiesta en inolvidable",
    color: "green" as const,
    features: [
      { text: "Cumpleaños, graduaciones y más" },
      { text: "Música variada para todos los gustos" },
      { text: "Adaptable a cualquier espacio" },
      { text: "Precios accesibles" }
    ],
    iconSvgUrl: "/svgs/fiestasvg.svg",
    delay: 200
  },
  {
    title: "Eventos Especiales",
    subtitle: "Sonido profesional para cualquier ocasión",
    color: "orange" as const,
    features: [
      { text: "Festivales y eventos masivos" },
      { text: "Promociones y lanzamientos" },
      { text: "Equipo para grandes audiencias" },
      { text: "Coordinación profesional" }
    ],
    iconSvgUrl: "/svgs/discosvg.svg",
    delay: 300
  }
];
---

<section id="servicios" class="relative bg-gradient-to-b from-gray-900 via-black to-gray-900 -mt-1 py-20 lg:py-32 overflow-hidden">

  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-20 left-10 w-2 h-2 bg-orange-500 rounded-full animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-3 h-3 bg-orange-500 rounded-full animate-pulse"></div>
    <div class="absolute top-1/4 right-20 w-2 h-2 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
    <div class="absolute bottom-1/3 left-16 w-1 h-1 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 right-1/4 w-2 h-2 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 1.5s;"></div>
    <div class="absolute bottom-1/4 left-1/3 w-3 h-3 bg-orange-400 rounded-full animate-pulse" style="animation-delay: 0.8s;"></div>
    <div class="absolute top-1/3 left-1/4 w-1 h-1 bg-orange-500 rounded-full animate-pulse" style="animation-delay: 1.2s;"></div>
    <div class="absolute bottom-40 right-1/3 w-2 h-2 bg-orange-300 rounded-full animate-pulse" style="animation-delay: 0.3s;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      
      <div class="text-center mb-8" data-aos="fade-up">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Servicios
        </h2>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          Pasa el mouse sobre las tarjetas para ver los detalles
        </p>
        <div class="w-24 h-1 bg-orange-500 mx-auto mt-6"></div>
      </div>

    
      <div class="flex justify-center mb-12">
        <Equalizer3D client:load />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 justify-items-center">
        {servicesData.map((service) => (
          <ServiceFlipCard 
            data={service}
            client:load
          />
        ))}
      </div>

    </div>
  </div>

 <div class="absolute bottom-0 left-0 right-0 h-32 overflow-hidden">
    <svg class="w-full h-full" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <defs>
        <linearGradient id="waveGradient1" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#111827;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
        </linearGradient>
        <linearGradient id="waveGradient2" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#1f2937;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#111827;stop-opacity:1" />
        </linearGradient>
        <linearGradient id="waveGradient3" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#000000;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#111827;stop-opacity:1" />
        </linearGradient>
      </defs>
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V120H0Z" opacity=".25" fill="url(#waveGradient1)"></path>
      <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V120H0Z" opacity=".5" fill="url(#waveGradient2)"></path>
      <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V120H0Z" fill="url(#waveGradient3)"></path>
    </svg>
  </div>
</section>

<ServiciosScrips />